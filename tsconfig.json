{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext.Array"],
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@includes/*": ["./includes/*"] 
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
